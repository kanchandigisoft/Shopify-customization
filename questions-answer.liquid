<section class="mm_qa_sec">
      <div class="mm_wrapper">
        <div class="mm_qa_sec_inner">
          <div class="qa_head">
            <h3 class="mm_qa_head mb-0">{{ section.settings.heading }}</h3>
          </div>
          <div class="qa_accordion">
              <div class="qa_accordion_inner">
                <div class="accordion" id="qa_accordion">
                  <div class="accordion-item">
                    <h2 class="accordion-header" id="qaheadingOne">
                      <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#qacollapseOne" aria-expanded="true" aria-controls="qacollapseOne">
                        {{ section.settings.question1 }}
                      </button>
                    </h2>
                    <div id="qacollapseOne" class="accordion-collapse collapse show" aria-labelledby="qaheadingOne" data-bs-parent="#qa_accordion">
                      <div class="accordion-body">
                       {{ section.settings.answer1 }}  
                      </div>
                    </div>
                  </div>
                  <div class="accordion-item">
                    <h2 class="accordion-header" id="qaheadingTwo">
                      <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#qacollapseTwo" aria-expanded="false" aria-controls="qacollapseTwo">
                        {{ section.settings.question2 }}
                      </button>
                    </h2>
                    <div id="qacollapseTwo" class="accordion-collapse collapse" aria-labelledby="qaheadingTwo" data-bs-parent="#qa_accordion">
                      <div class="accordion-body">
                         {{ section.settings.answer2 }}  
                      </div>
                    </div>
                  </div>
                  <div class="accordion-item">
                    <h2 class="accordion-header" id="qaheadingThree">
                      <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#qacollapseThree" aria-expanded="false" aria-controls="qacollapseThree">
                        {{ section.settings.question3 }}
                      </button>
                    </h2>
                    <div id="qacollapseThree" class="accordion-collapse collapse" aria-labelledby="qaheadingThree" data-bs-parent="#qa_accordion">
                      <div class="accordion-body">
                        {{ section.settings.answer3 }}
                      </div>
                    </div>
                  </div>
                </div>
              </div>
          </div>
        </div>
      </div>
    </section>
{% schema %}
  {
    "name": "Questions Answer",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      },
      {
        "type": "text",
        "id": "question1",
        "label": "Question"
      },
      {
        "type": "textarea",
        "id": "answer1",
        "label": "Answer"
      },
      {
        "type": "text",
        "id": "question2",
        "label": "Question"
      },
      {
        "type": "textarea",
        "id": "answer2",
        "label": "Answer"
      },
      {
        "type": "text",
        "id": "question3",
        "label": "Question"
      },
      {
        "type": "textarea",
        "id": "answer3",
        "label": "Answer"
      },
      
    ],
    "presets": [
      {
        "name": "Questions Answer"
      }
    ]
  }
{% endschema %}